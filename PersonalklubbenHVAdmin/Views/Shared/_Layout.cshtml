
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/Style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>@ViewBag.Title - Finder</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <a href="@Url.Action("Index", "Home")"> <img style="width: 20%; padding-left:5%; padding-top: 2%; " src="~/Images/PhersonalklubbenIkon.png.jpg" /></a>

        <div style="float:right">

            @if (HttpContext.Current.Session["admin"] != null)
            {
                <div style="margin-right: 0%">
                    @*<p style="color: black" class="menuBarItem"> @ViewBag.Username </p>
                        <button class="logoutbtn">@Html.ActionLink("Logga ut", "LogOut", "Login", null, new { @class = "logoutBtnColor" })</button>*@
                </div>
            }

        </div>


    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Phersonalklubben HV</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Startsidan</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Användare <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Page 1-1</a></li>
                        <li><a href="#">Page 1-2</a></li>
                        <li><a href="#">Page 1-3</a></li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Nyheter", "Index", "Nyheter")</li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="footer">
        <br />
        <a href="@Url.Action("Index", "Home")"> <img style="width: 20%; padding-left:5%; " src="~/Images/PhersonalklubbenIkon.png.jpg" /></a>
        <p style="color: limegreen">&copy; @DateTime.Now.Year - Phersonalklubben Högskolan Väst</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
