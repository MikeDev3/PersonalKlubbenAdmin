
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/Style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - Finder</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <a href="@Url.Action("Index", "Home")"> <img class="logoImg" style="width: 20%; padding-left:5%; padding-top: 2%; " src="~/Images/PhersonalklubbenIkon.png.jpg" /></a>

        <div style="float:right">

            @if (HttpContext.Current.Session["admin"] != null)
            {
                <div>
                    <p style="color: black; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif" class="menuBarItem"> @ViewBag.Username </p>
                    <button class="logoutbtn">@Html.ActionLink("Logga ut", "LogOut", "Login", null, new { @class = "logoutBtnColor" })</button>
                </div>
            }

        </div>


    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Phersonalklubben HV</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Index", "Home")">Startsidan</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Användare <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Medlemmar " + DateTime.Now.Year, "MedlemsIndex", "Medlems")</li>
                        <li>@Html.ActionLink("Nya registreringar", "NewRegistrations", "Medlems")</li>
                        <li>@Html.ActionLink("Totala medlemmar", "TotalMembers", "Medlems")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Nyheter <span class="caret"></span></a>
                    <ul class="dropdown-menu">

                        <li>@Html.ActionLink("Nyheter", "NyheterIndex", "Nyheter")</li>
                        <li>@Html.ActionLink("Publicera nyhet", "CreateNews", "Nyheter")</li>

                    </ul>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="footer">
        <br />
        <a href="@Url.Action("Index", "Home")"> <img class="logoImg" style="width: 20%; padding-left:5%; " src="~/Images/PhersonalklubbenIkon.png.jpg" /></a>
        <p style="color: limegreen">&copy; @DateTime.Now.Year - Phersonalklubben Högskolan Väst</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
