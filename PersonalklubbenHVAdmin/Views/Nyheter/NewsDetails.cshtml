@model PersonalklubbenHVAdmin.Models.Nyheter
@{
    ViewBag.Title = "NewsDetails";
}

<header class="w3-container w3-center w3-padding-32">
    <h1><b>@Html.DisplayFor(m => m.Rubrik)</b></h1>
    <p> <span class="w3-tag">@Model.PubliceringsDatum.ToString("yyyy/MM/dd")</span></p>
</header>

<!-- Grid -->
<div class="w3-row">

    <!-- Blog entries -->
    <div class="w3-card-4 w3-margin w3-white">
        <img src="~/Images/woods-walk.jpg" alt="Nature" style="width: 90%; padding: 30px; ">
        <div class="w3-container">
            <h3><b>@Html.DisplayFor(m => m.Rubrik)</b></h3>

            <h5>@Html.DisplayFor(m => m.Underrubrik), <span class="w3-opacity"><br /> <strong>Publicerades: </strong> @Model.PubliceringsDatum.ToString("yyyy/MM/dd")</span></h5>

        </div>

        <div class="w3-container">
           
            <p style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-size:17px;">
                @Html.DisplayFor(m => m.Beskrivning)
            </p>
            <div class="w3-row">
                <div class="w3-col m8 s12">
                    <p>
                       
                    </p>
                </div>
                <div class="w3-col m4 w3-hide-small">
                    <p><span class="w3-padding-large w3-right"><b>Comments  </b> <span class="w3-tag">0</span></span></p>
                </div>
            </div>
        </div>
    </div>
    <hr>

   
    <!-- END BLOG ENTRIES -->
</div>

    