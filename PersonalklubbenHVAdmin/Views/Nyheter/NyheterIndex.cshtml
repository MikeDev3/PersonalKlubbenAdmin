@model IEnumerable<PersonalklubbenHVAdmin.Models.Nyheter>
@{
    ViewBag.Title = "Index";
}


@if (Model.Count() > 0)
{
    <div class="table-users table-wrapper-scroll-y my-custom-scrollbar">
        <div class="customHeader">
            Senaste nytt
            <button class="createNewPostButton">@Html.ActionLink("Skapa nyhet", "CreateNews", "Nyheter", null, new { @class = "logoutBtnColor" }) <span class="glyphicon glyphicon-cog"></span></button>

        </div>
           
            
   

        <table cellspacing="0" style="overflow-y: auto">
            <tr>
                <th></th>
                <th>Nyhet</th>
                <th>Underrubrik</th>
                <th></th>
                <th width="630">Innehåll</th>
                <th>Hantera</th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td><img class="profileImg" src="~/Images/MessageIcon.png" alt="MeddelandeIkon" /></td>
                <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight:bold; font-size: 15px;">
                    @Html.DisplayFor(m => item.Rubrik)<br /> <br />
                    @item.PubliceringsDatum.ToString("yyyy/MM/dd")
                </td>
                <td>@Html.DisplayFor(m => item.Underrubrik)</td>
                <td></td>
                <td>@Html.DisplayFor(m => item.Beskrivning)</td>
                <td>
                        <button class="blockBtn"><span class="glyphicon glyphicon-trash"></span>&nbsp;Radera</button>
                        <button class="editBtn"><span class="glyphicon glyphicon-cog"></span>&nbsp;Ändra</button>
                </td>
            </tr>

           
            }
        </table>
    </div>
}
else
{
    <h2>Inga nyheter att visa</h2>
}