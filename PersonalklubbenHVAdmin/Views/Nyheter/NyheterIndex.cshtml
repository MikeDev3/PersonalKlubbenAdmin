@model IEnumerable<PersonalklubbenHVAdmin.Models.Nyheter>
@{
    ViewBag.Title = "NewsDetails";
}

<header class="w3-container w3-center w3-padding-32">
    <h1><b>Nyheter</b></h1>
    <p>Senaste nytt hos <span class="w3-tag">Phersonalklubben HV</span></p>

</header>

<!-- Grid -->
<div class="w3-row">
    <a href="@Url.Action("CreateNews", "Nyheter")" class="createNewPostButton logoutBtnColor btn"><span class="glyphicon glyphicon-pencil"></span> Skapa nyhet</a>
    <div class="table-wrapper-scroll-y news-scrollbar">


        @if (Model.Count() > 0)
        {
            <div class="w3-col l8 s12">


                @foreach (var item in Model)
                {
                    <!-- Blog entries -->
                    <!-- Blog entry -->
                    <div class="w3-card-4 w3-margin w3-white">
                        <img src="@item.BildURL" alt="Nature" style="width:100%; height: 400px;">

                        <div class="w3-container">
                            @*<h3><b>TITLE HEADING</b></h3>*@
                            <h3><b>@Html.DisplayFor(m => item.Rubrik)</b></h3>

                            @*<h5>Title description, <span class="w3-opacity">April 7, 2014</span></h5>*@
                            <h5>@Html.DisplayFor(m => item.Underrubrik), <span class="w3-opacity"><br /> <strong>Publicerades: </strong> @item.PubliceringsDatum.ToString("yyyy/MM/dd")</span></h5>

                        </div>

                        <div class="w3-container">
                            @*<p>
                                    Mauris neque quam, fermentum ut nisl vitae, convallis maximus nisl. Sed mattis nunc id lorem euismod placerat. Vivamus porttitor magna enim, ac accumsan tortor cursus at. Phasellus sed ultricies mi non congue ullam corper. Praesent tincidunt sed
                                    tellus ut rutrum. Sed vitae justo condimentum, porta lectus vitae, ultricies congue gravida diam non fringilla.
                                </p>*@
                            <p style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-size:17px;">
                                @Html.DisplayFor(m => item.Beskrivning)
                            </p>
                            <p>Publicerades av: @Html.DisplayFor(m => item.SkapadAv)</p>
                            <div class="w3-row">
                                <div class="w3-col m8 s12">
                                    <p>
                                        <button class="w3-button w3-padding-large w3-white w3-border">
                                            <b>
                                                @Html.ActionLink("Läs mer »", "NewsDetails", new { id = item.ID })
                                            </b>
                                        </button>
                                    </p>
                                </div>
                                <div class="w3-col m4 w3-hide-small">
                                    <p><span class="w3-padding-large w3-right"><b>Kommentarer?  </b> <span class="w3-tag">0</span></span></p>
                                    <a href="@Url.Action("DeleteNewsPost", "Nyheter", new { id = item.ID })" onclick="return confirm('Är du säker på att du vill radera denna nyhet?');" class="blockBtn logoutBtnColor btn"><span class="glyphicon glyphicon-trash"></span> Radera</a>


                                    <a href="@Url.Action("EditNews", "Nyheter", new { id = item.ID })" class="editBtn logoutBtnColor btn"><span class="glyphicon glyphicon-cog"></span> Ändra</a>
                                </div>


                            </div>
                        </div>
                    </div>
                    <hr>

                   
                }
            </div>
        }
        else
        {
            <h2>Inga nyheter att visa</h2>

        }

     
        <!-- END GRID -->
    </div><br>

    <!-- END w3-content -->
</div>
